<UserControl x:Class="LunarChores.Views.NoteEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LunarChores.Views"
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Height="50"
             cal:Message.Attach="[Event MouseDoubleClick] = [Action ExecuteFilterView($executionContext)]">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0"
                x:Name="EditButton"
                Content="Edit"/>

        <Label Grid.Column="1"
               x:Name="test"
               Content="{Binding AssignedNote.Description}"
               Foreground="White"
               FontSize="28"/>
    </Grid>
</UserControl>
